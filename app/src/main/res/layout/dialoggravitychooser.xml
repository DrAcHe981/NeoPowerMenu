<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/window_background_dark">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:id="@+id/dialoggravitychooserLinearLayout_ImageHolder">

			<ImageView
				android:layout_height="250dip"
				android:layout_width="260dip"
				android:src="@drawable/powermenu_screenshot"
				android:padding="0dp"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:background="@color/colorPrimaryDarkDarkTheme"
			android:layout_centerHorizontal="true"
			android:id="@+id/dialoggravitychooserLinearLayout_DialogGravityTop"
			android:layout_alignParentTop="true">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:background="@color/colorPrimaryDarkTheme"
				android:layout_marginBottom="1dp"
				android:layout_marginRight="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginTop="0dp"
				android:gravity="center"
				android:padding="2dp"
				android:minWidth="65dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Top"
					android:layout_gravity="center_horizontal"
						android:textColor="#FFFFFF"
						android:id="@+id/dialoggravitychooserText_DialogGravityTop"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

				<Switch
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/dialoggravitychooserSwitch_DialogGravityTop"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:background="@color/colorPrimaryDarkDarkTheme"
			android:id="@+id/dialoggravitychooserLinearLayout_DialogGravityLeft"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:background="@color/colorPrimaryDarkTheme"
				android:layout_marginBottom="2dp"
				android:layout_marginRight="1dp"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="2dp"
				android:gravity="center"
				android:padding="2dp"
				android:minWidth="55dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Left"
					android:layout_gravity="center_horizontal"
						android:textColor="#FFFFFF"
						android:id="@+id/dialoggravitychooserText_DialogGravityLeft"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

				<Switch
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/dialoggravitychooserSwitch_DialogGravityLeft"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:background="@color/colorPrimaryDarkDarkTheme"
			android:id="@+id/dialoggravitychooserLinearLayout_DialogGravityRight"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:background="@color/colorPrimaryDarkTheme"
				android:layout_marginBottom="2dp"
				android:layout_marginRight="0dp"
				android:layout_marginLeft="1dp"
				android:layout_marginTop="2dp"
				android:gravity="center"
				android:padding="2dp"
				android:minWidth="55dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Bottom"
					android:layout_gravity="center_horizontal"
						android:textColor="#FFFFFF"
						android:id="@+id/dialoggravitychooserText_DialogGravityRight"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

				<Switch
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/dialoggravitychooserSwitch_DialogGravityRight"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:background="@color/colorPrimaryDarkDarkTheme"
			android:id="@+id/dialoggravitychooserLinearLayout_DialogGravityBottom"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:background="@color/colorPrimaryDarkTheme"
				android:layout_marginBottom="0dp"
				android:layout_marginRight="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginTop="1dp"
				android:gravity="center"
				android:padding="2dp"
				android:minWidth="65dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Bottom"
					android:layout_gravity="center_horizontal"
						android:textColor="#FFFFFF"
						android:id="@+id/dialoggravitychooserText_DialogGravityBottom"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

				<Switch
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/dialoggravitychooserSwitch_DialogGravityBottom"/>

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

</LinearLayout>

