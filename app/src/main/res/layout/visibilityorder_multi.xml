<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<LinearLayout
		android:id="@id/drag_handle"
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_height="40dp"
			android:layout_width="40dp"
			android:orientation="vertical"
			android:gravity="center|center_vertical|center_horizontal"
			android:background="@color/colorPrimaryDarkDarkTheme"
			android:layout_gravity="center_vertical">

			<RelativeLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:background="@color/colorPrimaryDarkTheme"
				android:layout_marginBottom="2dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="1dp"
				android:layout_gravity="center|center_vertical">

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:alpha="0.888888888888"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:id="@+id/listitemhandleleftTextView1"
					android:layout_centerInParent="true"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="9dp"
					android:layout_marginLeft="9dp"
					android:alpha="0.66666666666"
					android:id="@+id/listitemhandleleftTextView2"
					android:layout_above="@id/listitemhandleleftTextView1"
					android:layout_marginBottom="5dp"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="15dp"
					android:layout_marginLeft="15dp"
					android:alpha="0.33333333333"
					android:layout_above="@id/listitemhandleleftTextView2"
					android:layout_marginBottom="5dp"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="9dp"
					android:layout_marginLeft="9dp"
					android:alpha="0.66666666666"
					android:layout_below="@id/listitemhandleleftTextView1"
					android:layout_marginTop="5dp"
					android:id="@+id/listitemhandleleftTextView3"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="15dp"
					android:layout_marginLeft="15dp"
					android:alpha="0.33333333333"
					android:layout_below="@id/listitemhandleleftTextView3"
					android:layout_marginTop="5dp"/>

			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:minHeight="50dp"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:paddingLeft="10dp"
		android:layout_toLeftOf="@id/listitemhandleleftLinearLayout1"
		android:layout_alignParentLeft="true"
		android:layout_marginRight="10dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_weight="1.0">

			<TextView
				android:background="?selectableItemBackground"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="Item 1"
				android:gravity="center"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FFFFFF"
				android:id="@+id/visibilityordermulti_item1"
				android:layout_weight="1.0"/>

			<TextView
				android:background="?selectableItemBackground"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="Item 2"
				android:gravity="center"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FFFFFF"
				android:id="@+id/visibilityordermulti_item2"
				android:layout_weight="1.0"/>

			<TextView
				android:background="?selectableItemBackground"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:text="Item 3"
				android:gravity="center"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FFFFFF"
				android:id="@+id/visibilityordermulti_item3"
				android:layout_weight="1.0"/>

		</LinearLayout>

		<TextView
			android:layout_height="2dp"
			android:layout_width="match_parent"
			android:background="@color/colorAccentDarkTheme"
			android:alpha="0.3"
			android:layout_marginRight="5dp"/>

	</LinearLayout>

</LinearLayout>

