<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_weight="1.0"
		android:gravity="center|center_vertical|center_horizontal">

		<ImageView
			android:id="@+id/tourPageImage"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@mipmap/ic_launcher"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/tourPageTextHolder"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/colorPrimaryDarkTheme">

		<TextView
			android:layout_height="1dp"
			android:layout_width="match_parent"
			android:background="@color/colorPrimaryDarkDarkTheme"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="5dp"
			android:orientation="vertical"
			android:visibility="visible">

			<TextView
				android:id="@+id/tourPageTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:gravity="center|center_vertical|center_horizontal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:text="Title"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:alpha="0.5"
				android:background="@color/colorAccentDarkTheme"
				android:minWidth="200dp"/>

		</LinearLayout>

		<TextView
			android:id="@+id/tourPageText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center|center_vertical|center_horizontal"
			android:text="Text"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#ffffff"/>

		<LinearLayout
			android:id="@+id/tourPageButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="?android:attr/selectableItemBackground"
			android:clickable="true"
			android:orientation="horizontal"
			android:padding="10dp">

			<TextView
				android:id="@+id/tourPageButtonText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="Button"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:visibility="visible"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

