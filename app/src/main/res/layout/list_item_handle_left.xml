<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:orientation="horizontal">

	<LinearLayout
		android:id="@id/drag_handle"
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_height="45dp"
			android:layout_width="40dp"
			android:orientation="vertical"
			android:gravity="center|center_vertical|center_horizontal"
			android:background="@color/colorPrimaryDarkDarkTheme"
			android:layout_gravity="center_vertical">

			<RelativeLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:background="@color/colorPrimaryDarkTheme"
				android:layout_marginBottom="2dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="1dp"
				android:layout_gravity="center|center_vertical">

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:alpha="0.888888888888"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:id="@+id/listitemhandleleftTextView1"
					android:layout_centerInParent="true"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="9dp"
					android:layout_marginLeft="9dp"
					android:alpha="0.66666666666"
					android:id="@+id/listitemhandleleftTextView2"
					android:layout_above="@id/listitemhandleleftTextView1"
					android:layout_marginBottom="5dp"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="15dp"
					android:layout_marginLeft="15dp"
					android:alpha="0.33333333333"
					android:layout_above="@id/listitemhandleleftTextView2"
					android:layout_marginBottom="5dp"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="9dp"
					android:layout_marginLeft="9dp"
					android:alpha="0.66666666666"
					android:layout_below="@id/listitemhandleleftTextView1"
					android:layout_marginTop="5dp"
					android:id="@+id/listitemhandleleftTextView3"/>

				<TextView
					android:layout_height="2dp"
					android:layout_width="match_parent"
					android:background="@color/colorAccentDarkTheme"
					android:layout_marginRight="15dp"
					android:layout_marginLeft="15dp"
					android:alpha="0.33333333333"
					android:layout_below="@id/listitemhandleleftTextView3"
					android:layout_marginTop="5dp"/>

			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:paddingRight="5dp"
				android:layout_weight="0"
				android:layout_alignParentRight="true"
				android:id="@+id/listitemhandleleftLinearLayout1"
				android:layout_centerVertical="true">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="@string/visibilityOrder_Enabled"
					android:layout_weight="1.0"
					android:gravity="bottom|center_horizontal"
					android:textColor="#FFFFFF"/>

				<Switch
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1.0"
					android:id="@+id/Switch"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:minHeight="60dp"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:paddingLeft="5dp"
				android:layout_toLeftOf="@id/listitemhandleleftLinearLayout1"
				android:layout_alignParentLeft="true"
				android:layout_marginRight="10dp"
				android:id="@+id/listitemhandleleftLinearLayout2">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Title/Primary Text"
					android:layout_weight="1.0"
					android:gravity="bottom"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="#FFFFFF"
					android:id="@+id/title"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Description/Secondary Text"
					android:layout_weight="1.0"
					android:gravity="top"
					android:paddingLeft="5dp"
					android:id="@+id/text"/>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:gravity="right"
					android:layout_below="@id/listitemhandleleftLinearLayout2"
					android:layout_alignRight="@id/listitemhandleleftLinearLayout2">

					<LinearLayout
						android:background="?android:attr/selectableItemBackground"
						android:layout_height="35dp"
						android:layout_width="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:paddingRight="5dp"
						android:paddingLeft="5dp"
						android:id="@+id/listitemhandleleftLinearLayout_HideDesc"
						android:visibility="gone">

						<CheckBox
							android:layout_height="match_parent"
							android:layout_width="wrap_content"
							android:gravity="center_vertical"
							android:id="@+id/hideDescCheckBox"/>

						<TextView
							android:layout_height="match_parent"
							android:layout_width="wrap_content"
							android:text="@string/visibilityOrder_HideDesc"
							android:gravity="center_vertical"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="2dp"
				android:background="@color/colorAccentDarkTheme"
				android:alpha="0.3"
				android:layout_toLeftOf="@id/listitemhandleleftLinearLayout1"
				android:layout_marginBottom="5dp"
				android:layout_marginTop="5dp"
				android:layout_marginRight="5dp"
				android:layout_alignTop="@id/listitemhandleleftLinearLayout2"
				android:layout_alignBottom="@id/listitemhandleleftLinearLayout2"/>

			<TextView
				android:layout_height="2dp"
				android:layout_width="match_parent"
				android:background="@color/colorAccentDarkTheme"
				android:alpha="0.3"
				android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp"
				android:layout_below="@id/listitemhandleleftLinearLayout2"/>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>

