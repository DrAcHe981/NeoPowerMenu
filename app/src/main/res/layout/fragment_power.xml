<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center">

	<de.NeonSoft.neopowermenu.helpers.CircularRevealView
		android:id="@+id/reveal"
		android:layout_width="match_parent"
		android:layout_height="180dp"
		android:layout_gravity="center"/>

	<FrameLayout
		android:id="@+id/frame"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="15dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:id="@+id/ListContainer"/>

			<LinearLayout
				android:id="@+id/power"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:layoutAnimation="@anim/layout_controller_push_up_in"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/ipower"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_margin="15dp"/>

				<TextView
					style="@style/TextAppearance.AppCompat.Body1"
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:text="@string/powerMenuMain_Shutdown"
					android:textSize="18sp"
					android:id="@+id/powerText"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/reboot"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:layoutAnimation="@anim/layout_controller_push_up_in"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/ireboot"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_margin="15dp"/>

				<TextView
					style="@style/TextAppearance.AppCompat.Body1"
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:text="@string/powerMenuMain_Reboot"
					android:textSize="18sp"
					android:id="@+id/rebootText"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/soft_reboot"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:layoutAnimation="@anim/layout_controller_push_up_in"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/isoftreboot"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_margin="15dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="vertical">

					<TextView
						style="@style/TextAppearance.AppCompat.Body1"
						android:layout_width="match_parent"
						android:layout_height="36dp"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="10dp"
						android:text="@string/powerMenuMain_SoftReboot"
						android:textSize="18sp"
						android:id="@+id/soft_rebootText"/>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginTop="-9dp"
						android:layoutAnimation="@anim/layout_controller_push_up_in">

						<TextView
							style="@style/TextAppearance.AppCompat.Body1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:text="@string/powerMenuMain_SoftRebootDesc"
							android:textSize="9sp"
							android:textStyle="bold"
							android:id="@+id/soft_rebootDescText"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/screenshot"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:layoutAnimation="@anim/layout_controller_push_up_in"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/iscreenshot"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_margin="15dp"/>

				<TextView
					style="@style/TextAppearance.AppCompat.Body1"
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:text="@string/powerMenuMain_Screenshot"
					android:textSize="18sp"
					android:id="@+id/screenshotText"/>

			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="30dp"
				android:layout_marginRight="30dp"
				android:layout_marginTop="15dp"
				android:background="#b6b6b6"
				android:id="@+id/seperator1"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="fill_horizontal"
				android:gravity="center"
				android:layoutAnimation="@anim/layout_controller_fade_in"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/recovery"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_weight="1"
					android:background="?selectableItemBackgroundBorderless"
					android:clickable="true"
					android:orientation="vertical"
					android:paddingTop="15dp">

					<ImageView
						android:id="@+id/irecovery"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_gravity="center"
						android:layout_weight="1"
						android:contentDescription="@string/app_name"
						android:gravity="center"/>

					<TextView
						style="@style/TextAppearance.AppCompat.Body1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center"
						android:paddingTop="5dp"
						android:text="@string/powerMenuBottom_Recovery"
						android:textSize="10sp"
						android:id="@+id/recoveryText"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/bootloader"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:background="?selectableItemBackgroundBorderless"
					android:clickable="true"
					android:orientation="vertical"
					android:paddingTop="15dp">

					<ImageView
						android:id="@+id/ibootloader"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_gravity="center"
						android:layout_weight="1"
						android:contentDescription="@string/app_name"
						android:gravity="center"/>

					<TextView
						style="@style/TextAppearance.AppCompat.Body1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center"
						android:paddingTop="5dp"
						android:text="@string/powerMenuBottom_Bootloader"
						android:textSize="10sp"
						android:id="@+id/bootloaderText"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/safemode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_weight="1"
					android:background="?selectableItemBackgroundBorderless"
					android:clickable="true"
					android:orientation="vertical"
					android:paddingTop="15dp">

					<ImageView
						android:id="@+id/isafe"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_gravity="center"
						android:layout_weight="1"
						android:contentDescription="@string/app_name"
						android:gravity="center"/>

					<TextView
						style="@style/TextAppearance.AppCompat.Body1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center"
						android:paddingTop="5dp"
						android:text="@string/powerMenuBottom_SafeMode"
						android:textSize="10sp"
						android:id="@+id/safemodeText"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</FrameLayout>

	<FrameLayout
		android:id="@+id/frame2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginRight="20dp"
		android:visibility="gone">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:orientation="horizontal">

			<ProgressBar
				android:id="@+id/progress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:indeterminate="true"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Power Off"
					android:textColor="#ffffff"
					android:textSize="20sp"/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layoutAnimation="@anim/layout_controller_push_up_in">

					<TextView
						android:id="@+id/status_detail"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:text="Shutting Down..."
						android:textColor="#ffffff"
						android:textSize="10sp"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</FrameLayout>

</FrameLayout>

